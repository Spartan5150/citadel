<h1>Users#index</h1>
<table class="table table-striped table-hover">
    <div class="row">
    <hr />
        <div class="col-lg-6">
            <tr>
                <th>User ID</th>
                <th>User Name</th>
                <th>Email</th>
                <th colspan="2">Created</th>
            </tr>
            <% @users.each do |user| %>
                <tr>
                <td><%= user.id %></td>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= link_to 'View Details', action: :show, id: user.id %>
                </tr>
            <% end %>
        </div>
    </div>
</table>